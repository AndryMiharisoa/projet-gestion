{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Liste des mouvements{% endblock %}

{% block body %}
    <h3>Liste des mouvements</h3>
    <a class="btn btn-secondary" href="{{ path('mouvement_new') }}" style="color:white; text-decoration: none; font-size:12px; width:115px; height: 32px; margin-bottom:10px;"><i class="fa fa-plus" style="padding: 5px"></i>Ajouter</a>
    <div style="width:90%">
        <table class="table" id="example">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Quantite</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mouvement in mouvements %}
                <tr>
                    <td>{{ mouvement.id }}</td>
                    <td>{{ mouvement.mouvType }}</td>
                    <td>{{ mouvement.mouvQuantite }}</td>
                    <td>{{ mouvement.mouvDate ? mouvement.mouvDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a title="Détails" href="{{ path('mouvement_show', {'id': mouvement.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                        <a title="Modifier" href="{{ path('mouvement_edit', {'id': mouvement.id}) }}"><i class="fa fa-edit" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
