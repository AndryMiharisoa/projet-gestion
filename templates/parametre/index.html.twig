{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Paramètre{% endblock %}

{% block body %}
    <h3>Paramètre</h3>
    
    <table class="table">
        <tbody>
        {% for parametre in parametres %}
            <tr>
                <p hidden="">{{ parametre.id }}</p>
                <p><strong style="color:#707070">Site :</strong> {{ parametre.paramSite }}</p>
                <p><strong style="color:#707070">SMTP :</strong> {{ parametre.paramSmtp }}</p>
                <p><strong style="color:#707070">Mot de passe :</strong> {{ parametre.paramMdp }}</p>
                <p><strong style="color:#707070">Code :</strong> {{ parametre.paramCode }}</p>
                <p><strong style="color:#707070">Actif :</strong> {{ parametre.paramActif }}</p>
                <a class="btn btn-secondary" href="{{ path('parametre_edit', {'id': parametre.id}) }}" style="color:white; text-decoration: none; font-size: 12px">Mettre à jour les paramètres</a>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
