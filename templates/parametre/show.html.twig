{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Parametre{% endblock %}

{% block body %}
    <h3>Parametre</h3>
    <a href="{{ path('parametre_index') }}" class="btn btn-secondary" style="width:115px; height: 35px; color:white; text-decoration: none; font-size:12px;"><i class="fa fa-chevron-left" style="padding: 5px"></i>Retour</a>

    <a href="{{ path('parametre_edit', {'id': parametre.id}) }}" class="btn btn-primary" style="width:110px; height: 35px; color:white; text-decoration: none; font-size:12px;  position :relative; left:5px "><i class="fa fa-edit" style="padding: 5px"></i>Modifier</a>

    {{ include('parametre/_delete_form.html.twig') }}
    <table class="table" style="width:35%;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parametre.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ parametre.paramCode }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ parametre.paramSite }}</td>
            </tr>
            <tr>
                <th>Smtp</th>
                <td>{{ parametre.paramSmtp }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ parametre.paramMdp }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ parametre.paramActif }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
