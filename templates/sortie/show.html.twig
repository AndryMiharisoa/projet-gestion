{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Sortie{% endblock %}

{% block body %}
    <h3>Sortie</h3>
    <a href="{{ path('sortie_index') }}" class="btn btn-secondary" style="width:115px; height: 35px; color:white; text-decoration: none; font-size:12px;"><i class="fa fa-chevron-left" style="padding: 5px"></i>Retour</a>

    <table class="table"  style="width:35%;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ sortie.sortDate ? sortie.sortDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ sortie.sortPrix }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ sortie.sortQuantite }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
